    "version": "0.2.0",
    "configurations": [
        {
            "address": "http://127.0.0.1:5500/",
            "localRoot": "${workspaceFolder}",
            "name": "homework6-heroku",
            "port": 9229,
            "remoteRoot": "heroku git:remote -a homework6-heroku",
            "request": "attach",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\index.html",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}